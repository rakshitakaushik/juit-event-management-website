<script>
  // Capture form submission event for Diksha event
  document.getElementById("dikshaForm").addEventListener("submit", function(event) {
    event.preventDefault(); // Prevent form submission

    // Get the entered values
    var name = document.getElementById("dikshaName").value;
    var email = document.getElementById("dikshaEmail").value;
    var phone = document.getElementById("dikshaPhone").value;

    // Perform further operations with the captured values (e.g., store in an array, send to a server, etc.)
    // Here, let's log the name to the console
    console.log("Registered Name: " + name);
    
    // Clear the form inputs
    document.getElementById("dikshaName").value = "";
    document.getElementById("dikshaEmail").value = "";
    document.getElementById("dikshaPhone").value = "";
  });
</script>
